	<lyric>
		<block type="verse">
			<row important_over="false">W<ch a="d"/>agą zabr<ch a="C"/>aną Tem<ch a="d"/>idzie</row>
			<row important_over="false">B<ch a="d"/>awimy s<ch a="C"/>ię w sprawiedl<ch a="d"/>iwość</row>
			<row important_over="false">Na je<ch a="d"/>dnej sz<ch a="C"/>ali zł<ch a="F"/>o kładz<ch a="G"/>iemy</row>
			<bis times="2">
				<row important_over="false">Na dr<ch a="d"/>ugiej do<ch a="C"/>bro i li<ch a="d"/>tość</row>
			</bis>
		</block>
		<block type="verse">
			<row important_over="false">Wsz<ch a="d"/>yscy się c<ch a="C"/>ieszą z równo<ch a="d"/>wagi</row>
			<row important_over="false">Ga<ch a="d"/>rdła zdzie<ch a="C"/>ramy w wiw<ch a="d"/>atach</row>
			<row important_over="false">Wsz<ch a="d"/>yscy się ci<ch a="C"/>eszą z r<ch a="F"/>ównow<ch a="G"/>agi</row>
			<bis times="2">
				<row important_over="false">Wskaz<ch a="d"/>ówkę puszc<ch a="C"/>zamy po l<ch a="d"/>atach</row>
			</bis>
		</block>
		<block type="chorus">
			<row important_over="false">
				<ch a="d"/>Oj nieł<ch a="C"/>adnie człowieku ni<ch a="d"/>eładnie</row>
			<row important_over="false">
				<ch a="d"/>Oj nieł<ch a="C"/>adnie człowieku brz<ch a="d"/>ydko</row>
			<row important_over="false">
				<ch a="d"/>Ty się całe ż<ch a="C"/>ycie tylko baw<ch a="d"/>isz</row>
			<bis times="2">
				<row important_over="false">
					<ch a="d"/>Czasem sobie zmi<ch a="C"/>eniasz baw<ch a="d"/>itko</row>
			</bis>
		</block>
		<block type="verse">
			<row important_over="false">Księg<ch a="d"/>ami baw<ch a="C"/>imy się w m<ch a="d"/>ądrość</row>
			<row important_over="false">Zab<ch a="d"/>awa t<ch a="C"/>o dla up<ch a="d"/>artych</row>
			<row important_over="false">Z ksi<ch a="d"/>ąg buduj<ch a="C"/>emy nau<ch a="F"/>ki i do<ch a="G"/>my</row>
			<bis times="2">
				<row important_over="false">A prz<ch a="d"/>ecież ks<ch a="C"/>ięgi to k<ch a="d"/>arty</row>
			</bis>
		</block>
		<block type="verse">
			<row important_over="false">R<ch a="d"/>az huczą br<ch a="C"/>awa, raz d<ch a="d"/>ziała</row>
			<row important_over="false"><ch a="d"/> Już się gub<ch a="C"/>imy w err<ch a="d"/>atach</row>
			<row important_over="false">Na i<ch a="d"/>le to m<ch a="C"/>ądre na i<ch a="F"/>le st<ch a="G"/>arczy</row>
			<bis times="2">
				<row important_over="false">Kt<ch a="d"/>oś nas os<ch a="C"/>ądzi po l<ch a="d"/>atach</row>
			</bis>
		</block>
		<blocklink blocknb="3"/>
		<block type="verse">
			<row important_over="false">Je<ch a="d"/>st jeszcze j<ch a="C"/>edna zab<ch a="d"/>awa</row>
			<row important_over="false">T<ch a="d"/>eż popul<ch a="C"/>arna choć nien<ch a="d"/>owa</row>
			<row important_over="false">D<ch a="d"/>o niej potrz<ch a="C"/>ebne jest d<ch a="F"/>woje l<ch a="G"/>udzi</row>
			<bis times="2">
				<row important_over="false">I sł<ch a="d"/>owa, i sł<ch a="C"/>owa, i sł<ch a="d"/>owa</row>
			</bis>
		</block>
		<block type="verse">
			<row important_over="false">Słow<ch a="d"/>ami bawi<ch a="C"/>my się w m<ch a="d"/>iłość</row>
			<row important_over="false">Sł<ch a="d"/>owa skład<ch a="C"/>amy w kwi<ch a="d"/>atach</row>
