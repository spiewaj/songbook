	<lyric xmlns="http://21wdh.staszic.waw.pl">
		<block type="verse">
			<row important_over="true"><ch a="D"/> Powiedz m<ch a="G"/>i, p<ch a="D"/>owiedz co byś chci<ch a="A"/>ała,</row>
			<row important_over="true"><ch a="D"/> Cuda ja cz<ch a="G"/>ynię, c<ch a="D"/>uda moja m<ch a="A"/>ała —</row>
			<row important_over="true"><ch a="e"/> Martwe zami<ch a="A"/>eniam w żywe,</row>
			<row important_over="true"><ch a="D"/> Zgasłe w płon<ch a="H7"/>ącą grzywę,</row>
			<row important_over="true"><ch a="e"/> Powiedz m<ch a="A"/>i co byś chciał<ch a="D"/>a.</row>
		</block>
		<block type="verse">
			<bis times="2">
				<row important_over="true"><ch a="G"/> Na błękicie j<ch a="A"/>est polana,</row>
				<row important_over="true"><ch a="D"/> Dwa obłoki t<ch a="H7"/>o hosanna,</row>
				<row important_over="true"><ch a="e"/> Jeden chłopak, dr<ch a="A"/>ugi p<ch a="D"/>anna.</row>
			</bis>
		</block>
		<block type="verse">
			<row important_over="false"><ch a="D"/> Jeśli chc<ch a="G"/>esz j<ch a="D"/>eszcze wi<ch a="A"/>ęcej,</row>
			<row important_over="false"><ch a="D"/> Wezmę cię j<ch a="G"/>a,<ch a="D"/> wezmę na r<ch a="A"/>ęce,</row>
			<row important_over="false"><ch a="e"/> W góry uni<ch a="A"/>osę dzikie,</row>
			<row important_over="false"><ch a="D"/> Zastęp lat<ch a="H7"/>awców skrzyknę,</row>
			<row important_over="false"><ch a="e"/> Jeśli chc<ch a="A"/>esz jeszcze w<ch a="D"/>yżej.</row>
		</block>
		<blocklink blocknb="2"/>
		<block type="verse">
			<row important_over="false"><ch a="D"/> Powiedz m<ch a="G"/>i, p<ch a="D"/>owiedz co byś chci<ch a="A"/>ała,</row>
			<row important_over="false"><ch a="D"/> Cuda ja cz<ch a="G"/>ynię, c<ch a="D"/>uda moja m<ch a="A"/>ała.</row>
			<row important_over="false"><ch a="e"/> Masz chęć na l<ch a="A"/>ody może</row>
			<row important_over="false"><ch a="D"/> Albo na mł<ch a="H7"/>ode zboże —</row>
			<row important_over="false"><ch a="e"/> Wszystko dla ci<ch a="A"/>ebie dziś zr<ch a="D"/>obię,</row>
			<row important_over="false"><ch a="e"/> Mój ty m<ch a="A"/>ały wielki b<ch a="D"/>oże.</row>
		</block>
