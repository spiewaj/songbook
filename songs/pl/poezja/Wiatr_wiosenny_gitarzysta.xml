<?xml version="1.0" encoding="utf-8"?>
<song xmlns="http://21wdh.staszic.waw.pl" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://21wdh.staszic.waw.pl https://spiewaj.com/song.xsd" title="Wiatr, wiosenny gitarzysta">
  <alias/>
  <text_author/>
  <comment/>
  <composer type="solo"/>
  <artist type="solo"/>
  <translator/>
  <original_title/>
  <lyric>
    <block type="verse">
      <row important_over="false"><ch a="G"/><ch a="e"/>Wiatr to jest taki gitarzysta</row>
      <row important_over="false"><ch a="a7"/><ch a="D7"/>Co gra na akacjowych listkach</row>
      <row important_over="false"><ch a="G"/><ch a="e"/>Pogra odchodzi i nie wraca</row>
      <row important_over="false"><ch a="a7"/><ch a="D7"/>I bardzo smuci się akacja</row>
    </block>
    <block type="verse">
      <row important_over="false"><ch a="e"/><ch a="h"/>Więc gdy zapadnie noc i nawet</row>
      <row important_over="false"><ch a="C"/><ch a="E"/>Róża się chowa w senną trawę</row>
      <row important_over="false"><ch a="a7"/><ch a="a7+"/>Ptak składa skrzydła w twardej sośnie</row>
      <row important_over="false"><ch a="a"/><ch a="h7"/><ch a="C"/><ch a="D"/>Akacja skarży się żałośnie</row>
    </block>
    <block type="verse">
      <row important_over="false"><ch a="G"/><ch a="e"/>Dokąd poleciał ten szaleniec</row>
      <row important_over="false"><ch a="a7"/><ch a="D7"/>Na czyich liściach szumi gdziejest</row>
      <row important_over="false"><ch a="G"/><ch a="e"/>Czemu nie wraca srebrny wariat</row>
      <row important_over="false"><ch a="a7"/><ch a="D7"/>Srebrny i ciepły jak latarnia</row>
    </block>
    <block type="verse">
      <row important_over="false"><ch a="e"/><ch a="h"/>Wietrze, ach wietrze jaka pustka</row>
      <row important_over="false"><ch a="C"/><ch a="E"/>Ty zawsze będziesz na mych ustach</row>
      <row important_over="false"><ch a="a7"/><ch a="a7+"/>Ty zawsze będziesz na mych listkach</row>
      <row important_over="false"><ch a="a"/><ch a="h7"/><ch a="C"/><ch a="D"/>Listkiem do listka Cię przyciskam</row>
    </block>
    <block type="verse">
      <row important_over="false"><ch a="G"/><ch a="e"/>Wietrze, wiosenny gitarzysto</row>
      <row important_over="false"><ch a="a7"/><ch a="D7"/>Mój każdy kwiat dla Ciebie wszystko</row>
      <row important_over="false"><ch a="G"/><ch a="e"/>Wietrze wiosenny z leśnych ścieżek</row>
      <row important_over="false"><ch a="a7"/><ch a="D7"/>Mój gitarzysto gondolierze</row>
    </block>
    <block type="verse">
      <row important_over="false"><ch a="e"/><ch a="h"/>Wietrze wiosenny piosenkarzu</row>
      <row important_over="false"><ch a="C"/><ch a="E"/>Jak długo będę twoja marząc</row>
      <row important_over="false"><ch a="a7"/><ch a="a7+"/>Aż wróci wiatr — zimowy wicher</row>
    </block>
  </lyric>
