	<lyric>
		<block type="verse">
			<row important_over="false">Zwyczaj to stary jak świat<ch a="C"/><ch a="F"/></row>
			<row important_over="false">Ogień, ogień, ogień<ch a="G"/><ch a="C"/></row>
