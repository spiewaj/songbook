	<artist type="solo"></artist>
	<lyric xmlns="http://21wdh.staszic.waw.pl">
		<block type="verse">
			<row important_over="false">P<ch a="a7"/>orwały nas deszczem,</row>
			<row important_over="false"><ch a="d"/> Przegoniły wi<ch a="E"/>atrem</row>
			<row important_over="false">I zdały na si<ch a="a"/>ebie.</row>
			<row important_over="false">W przygodnym nam d<ch a="a"/>omu</row>
			<row important_over="false">Miejsca nie zagrz<ch a="d"/>ały,</row>
			<row important_over="false">W tym g<ch a="E"/>órskim niby ni<ch a="a"/>ebie<ch a="A7"/>.</row>
		</block>
		<block type="chorus">
			<bis times="2">
				<row important_over="false">I dzi<ch a="d"/>ury w tym niebie</row>
				<row important_over="false">Wi<ch a="G7"/>atrem łat<ch a="C"/>ane,</row>
				<row important_over="false"><ch a="d"/> W bacówce t<ch a="E"/>ylko my s<ch a="a"/>ami<ch a="A7"/>.</row>
				<row important_over="false">I n<ch a="d"/>ic nie mówimy</row>
				<row important_over="false">T<ch a="E"/>ylko dotyk r<ch a="a"/>ęki</row>
				<row important_over="false">By nie psuć chw<ch a="H7"/>il,</row>
				<row important_over="false">Co przed n<ch a="F"/>a<ch a="E"/>m<ch a="a"/>i</row>
			</bis>
		</block>
		<block type="verse">
			<row important_over="false">A mrok - sprzymierzeniec<ch a="a7"/><ch a="F7"/></row>
			<row important_over="false">Przygarnął mi Ciebie,<ch a="E"/></row>
			<row important_over="false">Ciepło - Twoje ręce.<ch a="E"/><ch a="a"/><ch a="d"/><ch a="E7"/></row>
			<row important_over="false">(Ech) stara bacówko<ch a="a"/><ch a="F"/></row>
			<row important_over="false">Niebo w nas się rodzi,<ch a="F"/></row>
			<row important_over="false">Przyjaźń czy coś więcej.<ch a="E"/><ch a="a"/><ch a="A7"/></row>
		</block>
		<blocklink blocknb="2"/>
	</lyric>
	
