  <translator/>
  <original_title/>
  <lyric>
    <block type="verse">
      <row important_over="false"><ch a="C"/>Pan kiedyś stanął nad brzegiem<ch a="G"/><ch a="C"/><ch a="C7"/></row>
      <row important_over="false"><ch a="F"/>Szukał ludzi gotowych pójść za nim<ch a="G"/></row>
      <row important_over="false"><ch a="C"/>By łowić serca słów Bożych prawdą<ch a="G"/><ch a="C"/><ch a="C7"/></row>
    </block>
    <block type="verse">
      <bis>
        <row important_over="false"><ch a="F"/>O Panie to ty na mnie spojrzałeś<ch a="C"/></row>
        <row important_over="false"><ch a="G"/>Twoje usta dziś wyrzekły me imię<ch a="C"/><ch a="C7"/></row>
        <row important_over="false"><ch a="F"/>Swoją barkę pozostawiam na brzegu<ch a="C"/></row>
        <row important_over="false"><ch a="G"/>Razem z Tobą nowy zacznę dziś łów<ch a="C"/><ch a="C7"/></row>
      </bis>
    </block>
    <block type="verse">
      <row important_over="false"><ch a="C"/>Jestem ubogim człowiekiem<ch a="G"/><ch a="C"/><ch a="C7"/></row>
      <row important_over="false"><ch a="F"/>Moim skarbem są ręce gotowe<ch a="G"/></row>
      <row important_over="false"><ch a="C"/>Do pracy z Tobą i czyste serce<ch a="G"/><ch a="C"/><ch a="C7"/></row>
    </block>
    <blocklink blocknb="2"/>
    <block type="verse">
      <row important_over="false"><ch a="C"/>Ty potrzebujesz moich dłoni<ch a="G"/><ch a="C"/><ch a="C7"/></row>
      <row important_over="false"><ch a="F"/>Mego serca młodego zapałem<ch a="G"/></row>
      <row important_over="false"><ch a="C"/>Mych kropli potu i samotności<ch a="G"/><ch a="C"/><ch a="C7"/></row>
    </block>
    <blocklink blocknb="2"/>
    <block type="verse">
      <row important_over="false"><ch a="C"/>Dziś wyjedziemy już razem<ch a="G"/><ch a="C"/><ch a="C7"/></row>
      <row important_over="false"><ch a="F"/>Łowić serca na morzach dusz ludzkich<ch a="G"/></row>
      <row important_over="false"><ch a="C"/>Twej prawdy siecią i słowem życia<ch a="G"/><ch a="C"/><ch a="C7"/></row>
    </block>
    <blocklink blocknb="2"/>
  </lyric>
