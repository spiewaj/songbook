      <row important_over="false" sidechords="e H7 e (eA)">Zb<ch a="e"/>r<ch a="H7"/>o<ch a="e"/>j<ch a="A"/>a<ch a="e"/></row>
    </block>
    <block type="verse">
      <row important_over="never" sidechords="eD e"><ch a="e"/>Wrzasnęli hasło — wojna!<ch a="D"/><ch a="e"/></row>
      <row important_over="never" sidechords="eD e"><ch a="e"/>Zbudzili hufce hord<ch a="D"/><ch a="e"/></row>
      <row important_over="never" sidechords="eD e"><ch a="e"/>Zgwałcona noc spokojna<ch a="D"/><ch a="e"/></row>
      <row important_over="never" sidechords="eD e"><ch a="e"/>Ogląda pierwszy mord<ch a="D"/><ch a="e"/></row>
      <row important_over="never"><ch a="G"/>Goreją świeże rany<ch a="e"/></row>
      <row important_over="never" sidechords="eA H"><ch a="e"/>Hańbiona płonie twarz<ch a="A"/><ch a="H"/></row>
      <row important_over="never"><ch a="G"/>Lecz nam do obrony dany<ch a="Fis"/><ch a="F"/><ch a="e"/></row>
      <row important_over="never" sidechords="eD e (e)"><ch a="e"/>Pamięci pancerz nasz<ch a="D"/><ch a="e"/></row>
    </block>
    <block type="chorus">
      <row important_over="never" sidechords="(D) G D"><ch a="D"/>Więc choć za ciosem pada cios<ch a="G"/><ch a="D"/></row>
      <row important_over="never" sidechords="a G"><ch a="D"/>I wróg posiłki śle w konwojach<ch a="a"/><ch a="G"/></row>
      <row important_over="never"><ch a="a"/>Nas przed upadkiem chroni wciąż<ch a="H7"/><ch a="C"/><ch a="a"/></row>
      <row important_over="never" sidechords="e H7 e (eA)"><ch a="e"/>Zbroja<ch a="H7"/><ch a="e"/><ch a="A"/><ch a="e"/></row>
    </block>
    <block type="verse">
      <row important_over="never" sidechords="eD e"><ch a="e"/>Wywlekli pudła z blachy<ch a="D"/><ch a="e"/></row>
      <row important_over="never" sidechords="eD e"><ch a="e"/>Napchali kul do luf<ch a="D"/><ch a="e"/></row>
      <row important_over="never" sidechords="eD e"><ch a="e"/>I straszą — sami w strachu<ch a="D"/><ch a="e"/></row>
      <row important_over="never" sidechords="eD e"><ch a="e"/>Strzelają do ciał i słów<ch a="D"/><ch a="e"/></row>
      <row important_over="never"><ch a="G"/>Zabrońcie żyć wystrzałem<ch a="e"/></row>
      <row important_over="never" sidechords="eA H"><ch a="e"/>Niech zatryumfuje gwałt<ch a="A"/><ch a="H"/></row>
      <row important_over="never"><ch a="G"/>Nad każdym wzejdzie ciałem<ch a="Fis"/><ch a="F"/><ch a="e"/></row>
      <row important_over="never" sidechords="eD e (e)"><ch a="e"/>Pamięci żywej kształt<ch a="D"/><ch a="e"/></row>
