      <row important_over="true" sidechords="eA H">Pot<ch a="e"/>ykam si<ch a="A"/>ę co kr<ch a="H"/>ok</row>
      <row important_over="true">Bo ja<ch a="G"/>k sum<ch a="Fis"/>ienia sz<ch a="F"/>ant<ch a="e"/>aż</row>
