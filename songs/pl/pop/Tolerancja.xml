    <block type="verse">
      <row important_over="false"><ch a="D"/>Dlaczego nie mówimy</row>
      <row important_over="false"><ch a="D"/>O tym co nas boli otwarcie<ch a="A"/></row>
      <row important_over="false"><ch a="A"/>Budowa ściany wokół siebie</row>
      <row important_over="false"><ch a="D"/>Marna sztuka</row>
      <row important_over="false"><ch a="D"/>Wrażliwe słowo czuły dotyk</row>
      <row important_over="false"><ch a="A"/>Wystarczą</row>
      <row important_over="false"><ch a="D"/>Czasami tylko tego pragnę<ch a="A"/></row>
      <row important_over="false"><ch a="D"/>Tego szukam<ch a="A"/><ch a="D"/></row>
    </block>
    <block type="chorus">
      <row important_over="false"><ch a="A"/>Na miły Bóg</row>
      <row important_over="false"><ch a="D"/>Życie nie tylko po to jest by brać<ch a="G"/><ch a="A"/></row>
      <row important_over="false"><ch a="D"/>Życie nie po to jest by bezczynnie trwać<ch a="G"/><ch a="A"/></row>
      <row important_over="false"><ch a="D"/>I aby żyć siebie samego trzeba dać<ch a="G"/><ch a="A"/></row>
    </block>
    <block type="verse">
      <row important_over="false"><ch a="D"/>Problemy twoje moje nasze boje</row>
      <row important_over="false"><ch a="D"/>Polityka<ch a="A"/></row>
      <row important_over="false"><ch a="A"/>A przecież każdy włos jak nasze lata</row>
      <row important_over="false"><ch a="D"/>Policzony</row>
      <row important_over="false"><ch a="D"/>Kto jest bez winy niechaj pierwszy rzuci kamieniem</row>
      <row important_over="false"><ch a="A"/>Niech rzuci</row>
      <row important_over="false"><ch a="D"/>Daleko raj gdy na człowieka<ch a="A"/></row>
      <row important_over="false"><ch a="D"/>Się zamykam<ch a="A"/><ch a="D"/></row>
    </block>
